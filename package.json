{
  "name": "skyflux-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "ts-node-dev -r dotenv/config src/index.ts",
    "start": "yarn build && node -r dotenv/config lib/index.js",
    "build": "tsc",
    "pretty-quick": "pretty-quick --pattern \"**/*.*(js|ts)",
    "lint": "eslint src",
    "test": "jest"
  },
  "dependencies": {
    "@types/mongoose": "^5.7.36",
    "@types/nodemailer": "^6.4.0",
    "@types/ramda": "^0.27.17",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.7",
    "apollo-server": "^2.17.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.1",
    "mongoose": "^5.10.4",
    "mongoose-fuzzy-searching": "^1.3.1",
    "nodemailer": "^6.4.11",
    "ramda": "^0.27.1",
    "unique-names-generator": "^4.3.1",
    "uuid": "^8.3.0",
    "yup": "^0.29.3",
    "module-alias": "^2.2.2",
    "dotenv": "^8.2.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.1",
    "ts-jest": "^26.4.0",
    "ts-node-dev": "^1.0.0-pre.62"
  },
  "_moduleAliases": {
    "@models": "lib/models",
    "@utils": "lib/utils",
    "@decorators": "lib/decorators",
    "@pubsub": "lib/pubsub.js",
    "@validation": "lib/validation.js",
    "@errors": "lib/errors"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty-quick && yarn lint --max-warnings=0"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "@utils/(.*)$": "<rootDir>/src/utils/$1",
      "@validation": "<rootDir>/src/validation.ts",
      "@errors": "<rootDir>/src/errors"
    },
    "transform": {
      ".ts": "ts-jest"
    },
    "setupFiles": [
      "dotenv/config"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
