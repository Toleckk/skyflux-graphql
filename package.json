{
  "name": "skyflux-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "yarn codegen && ts-node-dev -r dotenv/config -r tsconfig-paths/register src/index.ts",
    "start": "yarn build && yarn prod",
    "prod": "node -r dotenv/config -r ./scripts/prod-paths lib/index.js",
    "build": "yarn codegen && tsc",
    "pretty-quick": "pretty-quick --pattern \"**/*.*(js|ts)",
    "lint": "eslint src",
    "test": "jest",
    "codegen": "node scripts/combineSchema && graphql-codegen --config codegen.yml && node scripts/fixUndefinedIndexInGeneratedTypes && rm -rf ./excluded && yarn prettier ./src/models/types.ts --write"
  },
  "dependencies": {
    "@graphql-codegen/add": "^2.0.1",
    "@graphql-codegen/cli": "1.19.1",
    "@graphql-codegen/introspection": "1.18.0",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-mongodb": "1.17.8",
    "@graphql-codegen/typescript-resolvers": "1.17.10",
    "@types/ioredis": "^4.17.7",
    "@types/jest": "^26.0.14",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.4",
    "@types/nodemailer": "^6.4.0",
    "@types/ramda": "^0.27.17",
    "@types/uuid": "^8.3.0",
    "apollo-server": "^2.17.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-redis-subscriptions": "^2.3.1",
    "graphql-tools": "^6.2.1",
    "ioredis": "^4.19.2",
    "module-alias": "^2.2.2",
    "mongoose": "^5.10.4",
    "mongoose-fuzzy-searching": "^1.3.1",
    "nodemailer": "^6.4.11",
    "ramda": "^0.27.1",
    "typescript": "^4.0.2",
    "unique-names-generator": "^4.3.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.1",
    "ts-jest": "^26.4.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "tsconfig-paths": "^3.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pretty-quick && yarn lint --max-warnings=0"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "@utils/(.*)$": "<rootDir>/src/utils/$1",
      "@validation": "<rootDir>/src/validation.ts",
      "@errors": "<rootDir>/src/errors"
    },
    "transform": {
      ".ts": "ts-jest"
    },
    "setupFiles": [
      "dotenv/config"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
